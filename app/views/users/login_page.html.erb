<div class = "backg">
<% if @user.errors.any? %>
  <% @user.errors.messages.each  do |msg|%>
    <%= msg%>
  <%end%>
<%end%>


<%= form_for([@user], :url=> {:controller=>"users", :action=>"allow_login"} , :method=> "put") do |f| %>
<table>
  <tr>
    <td><%= f.label :email%></td>
    <td><%= f.text_field :email%></td>
  </tr>
  <tr>
    <td><%= f.label :password%></td>
    <td><%= f.password_field :password%></td>
  </tr>
  <tr>
    <td><%= f.submit "Login"%></td>
    <td><%= link_to "Sign Up", :controllers=>"users" ,:action=>"new"%></td>
  </tr>
</table>
<%end%>
</div>
